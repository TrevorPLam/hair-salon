{
  "version": "1.0.0",
  "name": "Hair Salon AI Governance Manifest",
  "description": "Machine-readable constraints and quality gates for AI agents",
  "performance": {
    "lighthouseMobile": 95,
    "lighthouseDesktop": 95,
    "maxBundleKB": 150,
    "maxTotalBundleKB": 300,
    "coreWebVitals": {
      "lcp": 2.5,
      "fid": 100,
      "cls": 0.1
    }
  },
  "security": {
    "cspRequired": true,
    "rateLimitingRequired": true,
    "inputValidationRequired": true,
    "authenticationRequired": true,
    "secretsPolicy": true,
    "xssProtection": true,
    "csrfProtection": true
  },
  "testing": {
    "coverageTarget": 90,
    "unitTestCoverage": 90,
    "integrationTestCoverage": 80,
    "e2eCoverage": 100,
    "securityTestCoverage": 100
  },
  "accessibility": {
    "wcagLevel": "2.2 AA",
    "contrastRatio": 4.5,
    "keyboardNavigation": true,
    "screenReaderSupport": true,
    "semanticHTML": true
  },
  "architecture": {
    "adapterPattern": true,
    "middlewarePattern": true,
    "zodValidation": true,
    "serverComponents": true,
    "typescriptStrict": true
  },
  "codeQuality": {
    "eslint": true,
    "prettier": true,
    "typeChecking": true,
    "noConsoleErrors": true,
    "noMemoryLeaks": true
  },
  "content": {
    "seoRequired": true,
    "structuredData": true,
    "metaTags": true,
    "openGraph": true,
    "twitterCards": true
  },
  "integrations": {
    "stripe": {
      "required": true,
      "adapterPattern": true,
      "errorHandling": true
    },
    "resend": {
      "required": true,
      "adapterPattern": true,
      "rateLimiting": true
    },
    "supabase": {
      "required": true,
      "adapterPattern": true,
      "connectionPooling": true
    }
  },
  "deployment": {
    "nodeVersion": ">=24.0.0",
    "environmentValidation": true,
    "healthChecks": true,
    "monitoring": true,
    "logging": true
  },
  "documentation": {
    "apiDocs": true,
    "componentDocs": true,
    "readmeUpdated": true,
    "changelogMaintained": true
  },
  "monitoring": {
    "performanceMonitoring": true,
    "errorTracking": true,
    "userAnalytics": true,
    "uptimeMonitoring": true
  },
  "compliance": {
    "gdpr": true,
    "ccpa": true,
    "cookieConsent": true,
    "dataRetention": true,
    "privacyPolicy": true
  },
  "aiConstraints": {
    "noDirectEnvAccess": true,
    "noInlineStyles": true,
    "noUnvalidatedInputs": true,
    "noUntestedSecurity": true,
    "noBlockingScripts": true,
    "noClickableDivs": true
  },
  "qualityGates": {
    "buildMustPass": true,
    "testsMustPass": true,
    "lintMustPass": true,
    "typeCheckMustPass": true,
    "securityScanMustPass": true,
    "performanceMustMeetThresholds": true
  },
  "enforcement": {
    "ciChecks": true,
    "preCommitHooks": true,
    "automatedTesting": true,
    "codeReviewRequired": true
  }
}
