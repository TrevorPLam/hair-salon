# ============================================================================
# Environment Variables Reference
# ============================================================================
# Copy this file to .env.local for development:
#   cp .env.example .env.local
#
# All variables are OPTIONAL. The app runs with sensible defaults for local dev.
# Variables marked [PAIR] must both be set or both omitted.
#
# Source: packages/infra/env/schemas/*.ts
# Task: 1.7.1
# ============================================================================

# --- Core Application ---
NODE_ENV=development
SITE_URL=http://localhost:3000
SITE_NAME="Hair Salon Template"

# --- Public (exposed to client bundle via NEXT_PUBLIC_ prefix) ---
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME="Hair Salon Template"
NEXT_PUBLIC_ANALYTICS_ID=

# --- Analytics ---
ANALYTICS_ID=

# --- Sentry Error Tracking ---
# Note: Schema uses SENTRY_DSN; runtime expects NEXT_PUBLIC_SENTRY_DSN (see task 1.3.3)
SENTRY_DSN=
SENTRY_SAMPLE_RATE=1.0

# --- Supabase [PAIR] ---
# Both must be set together, or omit both for in-memory fallback
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=

# --- HubSpot CRM ---
HUBSPOT_PRIVATE_APP_TOKEN=

# --- Rate Limiting via Upstash Redis [PAIR] ---
# Both must be set together, or omit both for in-memory rate limiting
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# --- Booking Provider: Mindbody [PAIR] ---
MINDBODY_API_KEY=
MINDBODY_BUSINESS_ID=

# --- Booking Provider: Vagaro [PAIR] ---
VAGARO_API_KEY=
VAGARO_BUSINESS_ID=

# --- Booking Provider: Square [PAIR] ---
SQUARE_API_KEY=
SQUARE_BUSINESS_ID=
